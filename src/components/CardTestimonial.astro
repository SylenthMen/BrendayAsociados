---
const { imgtestigo } = Astro.props;
const { testimonio } = Astro.props;
const { nombre } = Astro.props;
const { cargo } = Astro.props;
---

<div class="w-full px-4 py-12 space-y-6 md:space-y-10">
  <div class="mx-auto max-w-3xl space-y-4">
    <div class="grid items-center gap-4 md:grid-cols-2 lg:gap-10">
      <div class="grid items-center gap-4">
        <img
          src={imgtestigo}
          width="96"
          height="96"
          alt="Avatar"
          class="rounded-full"
          style="aspect-ratio: 96 / 96; object-fit: cover;"
        /><div class="space-y-1">
          <h3 class="text-lg font-bold">{nombre}</h3><p
            class="text-sm text-[#d9b42d]"
          >
            {cargo}
          </p>
        </div>
      </div><div
        class="text-sm text-gray-500 space-y-4 md:text-base md:space-y-6 md:order-2 md:text-right dark:text-gray-400"
      >
        <p class="italic">
          {testimonio}
        </p>
      </div>
    </div>
  </div>
</div>
